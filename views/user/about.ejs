<%- include("navbar.ejs") %>

    <!-- Breadcrumbs -->
    <section class="breadcrumb-section py-3 bg-light">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">About Us</li>
                </ol>
            </nav>
        </div>
    </section>

    <!-- Hero Section -->
    <section class="hero-section py-5 bg-primary text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold mb-4"><%= about[0].about_title %></h1>
                    <p class="lead mb-4"><%= about[0].about_description %></p>
                    <a href="products.html" class="btn btn-light btn-lg"><%= about[0].about_button_text %></a>
                </div>
                <div class="col-lg-6">
                    <img src="/uploads/about/<%= about[0].about_image %>" 
                         class="img-fluid rounded-lg shadow-lg" alt="ElectroStore Team">
                </div>
            </div>
        </div>
    </section>

    <!-- Our Story -->
    <section class="our-story-section py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="mb-4">Our Story</h2>
                    <p class="lead text-muted mb-5">
                        Founded in 2020, ElectroStore began with a simple mission: to make cutting-edge technology accessible to everyone. 
                        What started as a small online store has grown into a trusted platform serving thousands of customers worldwide.
                    </p>
                </div>
            </div>
            
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="step-icon mx-auto mb-3">
                            <i class="bi bi-lightbulb"></i>
                        </div>
                        <h5>Innovation</h5>
                        <p class="text-muted">We stay ahead of the curve, always bringing you the latest and greatest in technology.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="step-icon mx-auto mb-3">
                            <i class="bi bi-people"></i>
                        </div>
                        <h5>Customer First</h5>
                        <p class="text-muted">Your satisfaction is our priority. We're here to help you find the perfect tech solution.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="step-icon mx-auto mb-3">
                            <i class="bi bi-award"></i>
                        </div>
                        <h5>Quality</h5>
                        <p class="text-muted">We only sell authentic, high-quality products from trusted brands and manufacturers.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Our Values -->
    <section class="our-values-section py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2>Our Values</h2>
                    <p class="lead text-muted">The principles that guide everything we do</p>
                </div>
            </div>
            
            <div class="row g-4">
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start">
                                <div class="flex-shrink-0">
                                    <i class="bi bi-shield-check text-primary" style="font-size: 2rem;"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5 class="card-title">Trust & Reliability</h5>
                                    <p class="card-text text-muted">
                                        We build lasting relationships with our customers through transparent business practices, 
                                        secure transactions, and reliable delivery. Your trust is our most valuable asset.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start">
                                <div class="flex-shrink-0">
                                    <i class="bi bi-lightning-charge text-primary" style="font-size: 2rem;"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5 class="card-title">Innovation & Excellence</h5>
                                    <p class="card-text text-muted">
                                        We continuously evolve to bring you the latest technology trends and innovations. 
                                        Our commitment to excellence drives us to exceed your expectations every time.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start">
                                <div class="flex-shrink-0">
                                    <i class="bi bi-heart text-primary" style="font-size: 2rem;"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5 class="card-title">Customer Care</h5>
                                    <p class="card-text text-muted">
                                        We're not just selling products; we're providing solutions. Our dedicated support team 
                                        is here to help you make the most of your technology investments.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start">
                                <div class="flex-shrink-0">
                                    <i class="bi bi-globe text-primary" style="font-size: 2rem;"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5 class="card-title">Sustainability</h5>
                                    <p class="card-text text-muted">
                                        We're committed to responsible business practices and environmental sustainability. 
                                        We work with partners who share our values for a better future.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Our Team -->
    <section class="our-team-section py-5">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2>Meet Our Team</h2>
                    <p class="lead text-muted">The passionate people behind ElectroStore</p>
                </div>
            </div>
            
            <div class="row g-4">

                <% for(var i = 0; i < team_members.length; i++) { %>

                <div class="col-lg-4 col-md-6">
                    <div class="card border-0 shadow-sm">
                        <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" 
                             class="card-img-top" alt="John Smith">
                        <div class="card-body text-center">
                            <h5 class="card-title"><%= team_members[i].member_name %></h5>
                            <p class="text-primary"><%= team_members[i].member_position %></p>
                            <p class="card-text text-muted"><%= team_members[i].member_description %></p>
                        </div>
                    </div>
                </div>
                <% } %>

            </div>
        </div>
    </section>

        <section class="cta-section py-5 bg-light">
        <div class="container text-center">
            <h2 class="mb-3">Ready to experience the future of tech?</h2>
            <p class="lead mb-4">Join thousands of satisfied customers and discover your next favorite gadget.</p>
            <a href="/products" class="btn btn-primary btn-lg">Shop Now</a>
        </div>
    </section>
    
    <!-- Stats Section -->
    <section class="stats-section py-5 bg-primary text-white">
        <div class="container">
            <div class="row text-center">
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="h2 fw-bold">50K+</div>
                    <p class="mb-0">Happy Customers</p>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="h2 fw-bold">1000+</div>
                    <p class="mb-0">Products</p>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="h2 fw-bold">99.9%</div>
                    <p class="mb-0">Uptime</p>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="h2 fw-bold">24/7</div>
                    <p class="mb-0">Support</p>
                </div>
            </div>
        </div>
    </section>


<%- include("footer.ejs") %> 

