<%- include("navbar.ejs") %>

    <!-- Breadcrumbs -->
    <section class="breadcrumb-section py-3 bg-light">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">FAQ</li>
                </ol>
            </nav>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq-section py-5">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2>Frequently Asked Questions</h2>
                    <p class="lead text-muted">Find answers to common questions about our products and services</p>
                </div>
            </div>
            
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <!-- Search FAQ -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-search"></i>
                                </span>
                                <input type="text" class="form-control" placeholder="Search FAQ..." id="faqSearch">
                            </div>
                        </div>
                    </div>
                    
                    <!-- FAQ Accordion -->
                    <div class="accordion" id="faqAccordion">
                        <!-- General Questions -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#general">
                                    <i class="bi bi-question-circle me-2"></i>General Questions
                                </button>
                            </h2>
                            <div id="general" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    <div class="accordion" id="generalAccordion">
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#general1">
                                                    What is ElectroStore?
                                                </button>
                                            </h2>
                                            <div id="general1" class="accordion-collapse collapse" data-bs-parent="#generalAccordion">
                                                <div class="accordion-body">
                                                    ElectroStore is a premium electronics retailer specializing in the latest smartphones, laptops, tablets, headphones, and accessories. We offer authentic products from top brands with competitive prices and exceptional customer service.
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#general2">
                                                    Are your products authentic?
                                                </button>
                                            </h2>
                                            <div id="general2" class="accordion-collapse collapse" data-bs-parent="#generalAccordion">
                                                <div class="accordion-body">
                                                    Yes, all our products are 100% authentic and sourced directly from authorized distributors and manufacturers. We guarantee the authenticity of every item we sell.
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#general3">
                                                    Do you offer international shipping?
                                                </button>
                                            </h2>
                                            <div id="general3" class="accordion-collapse collapse" data-bs-parent="#generalAccordion">
                                                <div class="accordion-body">
                                                    Currently, we ship within the United States and Canada. We're working on expanding our shipping to other countries. Please check our shipping page for the most up-to-date information.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Ordering & Payment -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#ordering">
                                    <i class="bi bi-cart-check me-2"></i>Ordering & Payment
                                </button>
                            </h2>
                            <div id="ordering" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    <div class="accordion" id="orderingAccordion">
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#ordering1">
                                                    What payment methods do you accept?
                                                </button>
                                            </h2>
                                            <div id="ordering1" class="accordion-collapse collapse" data-bs-parent="#orderingAccordion">
                                                <div class="accordion-body">
                                                    We accept all major credit cards (Visa, Mastercard, American Express), PayPal, Apple Pay, Google Pay, and bank transfers. We also offer cash on delivery for select areas.
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#ordering2">
                                                    How can I track my order?
                                                </button>
                                            </h2>
                                            <div id="ordering2" class="accordion-collapse collapse" data-bs-parent="#orderingAccordion">
                                                <div class="accordion-body">
                                                    Once your order ships, you'll receive a tracking number via email. You can track your order by logging into your account or using the tracking number on our website or the carrier's website.
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#ordering3">
                                                    Can I modify or cancel my order?
                                                </button>
                                            </h2>
                                            <div id="ordering3" class="accordion-collapse collapse" data-bs-parent="#orderingAccordion">
                                                <div class="accordion-body">
                                                    You can modify or cancel your order within 1 hour of placing it, as long as it hasn't been processed for shipping. After that, you'll need to contact our customer service team.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Shipping & Delivery -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#shipping">
                                    <i class="bi bi-truck me-2"></i>Shipping & Delivery
                                </button>
                            </h2>
                            <div id="shipping" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    <div class="accordion" id="shippingAccordion">
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#shipping1">
                                                    How long does shipping take?
                                                </button>
                                            </h2>
                                            <div id="shipping1" class="accordion-collapse collapse" data-bs-parent="#shippingAccordion">
                                                <div class="accordion-body">
                                                    Standard shipping takes 5-7 business days, express shipping takes 2-3 business days, and overnight shipping delivers the next business day. Free shipping is available on orders over $50.
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#shipping2">
                                                    Do you offer free shipping?
                                                </button>
                                            </h2>
                                            <div id="shipping2" class="accordion-collapse collapse" data-bs-parent="#shippingAccordion">
                                                <div class="accordion-body">
                                                    Yes, we offer free standard shipping on all orders over $50. Free shipping is automatically applied at checkout when your order meets the minimum requirement.
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#shipping3">
                                                    What if I'm not home when my package arrives?
                                                </button>
                                            </h2>
                                            <div id="shipping3" class="accordion-collapse collapse" data-bs-parent="#shippingAccordion">
                                                <div class="accordion-body">
                                                    The carrier will attempt delivery and leave a notice if you're not available. You can arrange for redelivery or pick up the package from the carrier's facility. Some carriers also offer delivery to secure locations.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Returns & Refunds -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#returns">
                                    <i class="bi bi-arrow-clockwise me-2"></i>Returns & Refunds
                                </button>
                            </h2>
                            <div id="returns" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    <div class="accordion" id="returnsAccordion">
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#returns1">
                                                    What is your return policy?
                                                </button>
                                            </h2>
                                            <div id="returns1" class="accordion-collapse collapse" data-bs-parent="#returnsAccordion">
                                                <div class="accordion-body">
                                                    We offer a 30-day return policy for most items. Items must be in original condition with packaging. Some items like opened software or personalized products may not be returnable.
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#returns2">
                                                    How do I return an item?
                                                </button>
                                            </h2>
                                            <div id="returns2" class="accordion-collapse collapse" data-bs-parent="#returnsAccordion">
                                                <div class="accordion-body">
                                                    Log into your account, go to your orders, and click "Return Item." Fill out the return form and we'll send you a prepaid return label. Pack the item securely and drop it off at any authorized location.
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#returns3">
                                                    How long do refunds take?
                                                </button>
                                            </h2>
                                            <div id="returns3" class="accordion-collapse collapse" data-bs-parent="#returnsAccordion">
                                                <div class="accordion-body">
                                                    Once we receive your returned item, refunds are processed within 5-7 business days. The time for the refund to appear in your account depends on your payment method and bank.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Technical Support -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#technical">
                                    <i class="bi bi-gear me-2"></i>Technical Support
                                </button>
                            </h2>
                            <div id="technical" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    <div class="accordion" id="technicalAccordion">
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#technical1">
                                                    Do you provide technical support?
                                                </button>
                                            </h2>
                                            <div id="technical1" class="accordion-collapse collapse" data-bs-parent="#technicalAccordion">
                                                <div class="accordion-body">
                                                    Yes, we provide technical support for all products we sell. Our support team can help with setup, troubleshooting, and general product questions. Contact us via phone, email, or live chat.
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#technical2">
                                                    What if my product is defective?
                                                </button>
                                            </h2>
                                            <div id="technical2" class="accordion-collapse collapse" data-bs-parent="#technicalAccordion">
                                                <div class="accordion-body">
                                                    If your product is defective, contact us immediately. We'll arrange for a replacement or repair under warranty. Most products come with a 1-year manufacturer warranty.
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#technical3">
                                                    Do you offer extended warranties?
                                                </button>
                                            </h2>
                                            <div id="technical3" class="accordion-collapse collapse" data-bs-parent="#technicalAccordion">
                                                <div class="accordion-body">
                                                    Yes, we offer extended warranty options for most products. These can be purchased at checkout or within 30 days of your purchase. Extended warranties provide additional coverage beyond the manufacturer warranty.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Contact Support -->
                    <div class="card mt-4">
                        <div class="card-body text-center">
                            <h5>Still have questions?</h5>
                            <p class="text-muted">Can't find the answer you're looking for? Our customer support team is here to help.</p>
                            <div class="d-flex justify-content-center gap-3">
                                <a href="/contact" class="btn btn-primary">
                                    <i class="bi bi-envelope me-2"></i>Contact Us
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
        <script>
        // FAQ Search functionality
        document.getElementById('faqSearch').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const accordionItems = document.querySelectorAll('.accordion-item');
            
            accordionItems.forEach(item => {
                const text = item.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        });
        
        function startLiveChat() {
            ElectroStore.showToast('Live chat is currently offline. Please use the contact form or call us.', 'info');
        }
    </script>


<%- include("footer.ejs") %>