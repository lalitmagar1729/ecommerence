<%- include("navbar.ejs") %>

    <!-- My Orders Section -->
    <section class="my-orders-section py-5">
        <div class="container">
            <div class="row">
                <!-- Profile Sidebar -->
                <div class="col-lg-3">
                    <div class="profile-card mb-4">
                        <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80"
                            class="profile-avatar" alt="Profile Picture">
                        <h4 class="mb-1">
                            <%= orders[0].first_name %>
                                <%= orders[0].last_name %>
                        </h4>
                        <p class="text-muted mb-3">
                            <%= orders[0].email %>
                        </p>
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-camera me-2"></i>Change Photo
                            </button>
                        </div>
                    </div>

                    <div class="profile-menu">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="/profile">
                                    <i class="bi bi-person me-2"></i>Profile Overview
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/profile-edit">
                                    <i class="bi bi-pencil me-2"></i>Edit Profile
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/profile-password">
                                    <i class="bi bi-lock me-2"></i>Change Password
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/profile-orders">
                                    <i class="bi bi-box-seam me-2"></i>My Orders
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/profile-invoice">
                                    <i class="bi bi-receipt me-2"></i>Invoices
                                </a>
                            </li>
                           
                            <li class="nav-item">
                                <a class="nav-link" href="/wishlist">
                                    <i class="bi bi-heart me-2"></i>Wishlist
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/terms">
                                    <i class="bi bi-file-text me-2"></i>Terms & Conditions
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Orders Content -->
                <div class="col-lg-9">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2>My Orders</h2>
                        <div class="d-flex align-items-center gap-3">
                            <select class="form-select" style="width: auto;">
                                <option value="all">All Orders</option>
                                <option value="pending">Pending</option>
                                <option value="processing">Processing</option>
                                <option value="shipped">Shipped</option>
                                <option value="delivered">Delivered</option>
                                <option value="cancelled">Cancelled</option>
                            </select>
                        </div>
                    </div>

                    <!-- Order Cards -->
                    <div class="row g-4">
                        <!-- Order 1 -->
                        <% for(var i=0; i<orders.length; i++) { %>
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Order #<%= orders[i].order_id %>
                                            </h6>
                                            <small class="text-muted">Placed on <%= new Date(orders[i].order_date).toLocaleDateString('en-CA') %></small>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-success"><%= orders[i].order_status %></span>
                                            <div class="h6 mb-0 mt-1">&#8377; <%= orders[i].total_amount %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-md-8">
                                                <% if (orders[i].products && orders[i].products.length> 0) { %>
                                                    <% for (var j=0; j < orders[i].products.length; j++) { %>
                                                        <div class="d-flex align-items-center mb-3">
                                                            <img src="/uploads/products/<%= orders[i].products[j].product_main_image %>"
                                                                class="cart-item-image me-3"
                                                                alt="<%= orders[i].products[j].product_name %>">
                                                            <div>
                                                                <h6 class="mb-1">
                                                                    <%= orders[i].products[j].product_name %>
                                                                </h6>
                                                                <small class="text-muted">
                                                                    <%= orders[i].products[j].product_title %> â€¢
                                                                        <%= orders[i].products[j].product_color %>
                                                                </small>
                                                                <div class="text-primary">
                                                                    Qty: <%= orders[i].products[j].product_quantity %>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <% } %>
                                                            <% } else { %>
                                                                <p class="text-muted">No products found for this order.
                                                                </p>
                                                                <% } %>
                                            </div>

                                            <div class="col-md-4 text-end">
                                                <div class="mb-3">
                                                    <small class="text-muted">Delivered on </small>                                                           </small>
                                                </div>
                                                <div class="d-grid gap-2">
                                                    <a href="/profile-invoice" class="btn btn-outline-primary btn-sm">
                                                        <i class="bi bi-receipt me-1"></i> View Invoice
                                                    </a>
                                                    <button class="btn btn-outline-secondary btn-sm">
                                                        <i class="bi bi-arrow-clockwise me-1"></i> Reorder
                                                    </button>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                          <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include("footer.ejs") %>