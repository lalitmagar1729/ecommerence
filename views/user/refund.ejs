<%- include("navbar.ejs") %>

    <!-- Breadcrumbs -->
    <section class="breadcrumb-section py-3 bg-light">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Returns & Refunds</li>
                </ol>
            </nav>
        </div>
    </section>

    <!-- Returns & Refunds Section -->
    <section class="returns-refunds-section py-5">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2>Returns & Refunds</h2>
                    <p class="lead text-muted">We want you to be completely satisfied with your purchase</p>
                </div>
            </div>
            
            <div class="row g-4">
                <!-- Return Policy Overview -->
                <div class="col-lg-8">
                    <div class="card shadow-lg border-0">
                        <div class="card-header bg-primary text-white">
                            <h4 class="mb-0">
                                <i class="bi bi-arrow-clockwise me-2"></i>Return Policy
                            </h4>
                        </div>
                        <div class="card-body p-4">
                            <div class="alert alert-success">
                                <i class="bi bi-check-circle me-2"></i>
                                <strong>30-Day Return Policy:</strong> Most items can be returned within 30 days of delivery for a full refund.
                            </div>
                            
                            <h5>Eligible Items</h5>
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Unopened items in original packaging</li>
                                <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Items with manufacturing defects</li>
                                <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Items that don't match the description</li>
                                <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Items damaged during shipping</li>
                            </ul>
                            
                            <h5>Non-Returnable Items</h5>
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="bi bi-x text-danger me-2"></i>Opened software or digital downloads</li>
                                <li class="mb-2"><i class="bi bi-x text-danger me-2"></i>Personalized or custom items</li>
                                <li class="mb-2"><i class="bi bi-x text-danger me-2"></i>Items damaged by misuse</li>
                                <li class="mb-2"><i class="bi bi-x text-danger me-2"></i>Items returned after 30 days</li>
                            </ul>
                        </div>
                    </div>
                </div>
                
                <!-- Quick Actions -->
                <div class="col-lg-4">
                    <div class="card shadow-lg border-0 mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="bi bi-tools me-2"></i>Quick Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#returnModal">
                                    <i class="bi bi-arrow-clockwise me-2"></i>Start Return
                                </button>
                                <button class="btn btn-outline-primary" onclick="trackReturn()">
                                    <i class="bi bi-truck me-2"></i>Track Return
                                </button>
                                <a href="/contact" class="btn btn-outline-secondary">
                                    <i class="bi bi-headset me-2"></i>Contact Support
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Return Timeline -->
                    <div class="card shadow-lg border-0">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="bi bi-clock me-2"></i>Return Timeline
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="timeline">
                            <!-- Step 1 -->
                            <div class="d-flex align-items-center mb-3">
                              <div class="flex-shrink-0">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
                                  <i class="bi bi-file-earmark-text"></i> <!-- Request icon -->
                                </div>
                              </div>
                              <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Submit Return Request</h6>
                                <small class="text-muted">Within 30 days of delivery</small>
                              </div>
                            </div>

                            <!-- Step 2 -->
                            <div class="d-flex align-items-center mb-3">
                              <div class="flex-shrink-0">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
                                  <i class="bi bi-envelope-open"></i> <!-- Label email icon -->
                                </div>
                              </div>
                              <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Receive Return Label</h6>
                                <small class="text-muted">Within 24 hours</small>
                              </div>
                            </div>

                            <!-- Step 3 -->
                            <div class="d-flex align-items-center mb-3">
                              <div class="flex-shrink-0">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
                                  <i class="bi bi-box-seam"></i> <!-- Shipping box icon -->
                                </div>
                              </div>
                              <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Ship Item Back</h6>
                                <small class="text-muted">Within 7 days of approval</small>
                              </div>
                            </div>

                            <!-- Step 4 -->
                            <div class="d-flex align-items-center">
                              <div class="flex-shrink-0">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
                                  <i class="bi bi-cash-stack"></i> <!-- Refund money icon -->
                                </div>
                              </div>
                              <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Receive Refund</h6>
                                <small class="text-muted">Within 5-7 business days</small>
                              </div>
                            </div>
                          </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
            

        </div>
    </section>

    <!-- Return Request Modal -->
    <div class="modal fade" id="returnModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Start Return Request</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="orderNumber" class="form-label">Order Number *</label>
                            <input type="text" class="form-control" id="orderNumber" placeholder="e.g., ES-2024-001" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="returnReason" class="form-label">Reason for Return *</label>
                            <select class="form-select" id="returnReason" required>
                                <option value="">Select a reason</option>
                                <option value="defective">Item is defective</option>
                                <option value="wrong-item">Wrong item received</option>
                                <option value="not-as-described">Item not as described</option>
                                <option value="damaged-shipping">Damaged during shipping</option>
                                <option value="changed-mind">Changed my mind</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="returnDescription" class="form-label">Description *</label>
                            <textarea class="form-control" id="returnDescription" rows="3" required placeholder="Please describe the issue in detail..."></textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label for="returnMethod" class="form-label">Preferred Refund Method *</label>
                            <select class="form-select" id="returnMethod" required>
                                <option value="">Select refund method</option>
                                <option value="original">Original payment method</option>
                                <option value="paypal">PayPal</option>
                                <option value="store-credit">Store credit</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitReturn()">Submit Return Request</button>
                </div>
            </div>
        </div>
    </div>
<script>
        function trackReturn() {
            ElectroStore.showToast('Return tracking feature coming soon!', 'info');
        }
        
        function submitReturn() {
            const form = document.querySelector('#returnModal form');
            if (form.checkValidity()) {
                ElectroStore.showToast('Return request submitted successfully!', 'success');
                const modal = bootstrap.Modal.getInstance(document.getElementById('returnModal'));
                modal.hide();
                form.reset();
            } else {
                form.classList.add('was-validated');
            }
        }
    </script>

