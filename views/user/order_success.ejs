</div>


<script>
  
$(document).ready(function() {
    function runAnimation() {
        let button = $('.order');
        button.addClass('animate');
        setTimeout(() => {
            button.removeClass('animate');
        }, 10000); // animation duration

        // restart animation after 12s (10s animation + 2s gap)
        setTimeout(runAnimation, 11000);
    }

    runAnimation(); // start immediately
});

</script>

