<%- include("navbar.ejs") %>
<form action="/admin/update_product_variations" method="POST" enctype="multipart/form-data">

  <!-- Hidden Product ID and Variation ID -->
  <input type="hidden" name="product_id" value="<%= product[0].product_id %>">
  <input type="hidden" name="products_variation_id" value="<%= product_info[0].products_variation_id %>">

  <div class="container bg-white p-4 rounded shadow-sm">
    <div class="row mb-3">
      <div class="col">
        <h4 class="fw-bold mb-0">
          Edit Product Variation for: <span class="text-primary"><%= product[0].product_name %></span>
        </h4>
        <hr>
      </div>
    </div>

    <div class="row g-3">
      <!-- Variation Title -->
      <div class="col-md-6">
        <label for="variation_title" class="form-label">Variation Title</label>
        <input type="text" class="form-control" id="variation_title" name="variation_title"
          placeholder="e.g., Size - Medium, Color - Red" value="<%= product_info[0].variation_title %>" required>
      </div>

      <!-- Variation Market Price -->
      <div class="col-md-6">
        <label for="variation_market_price" class="form-label">Market Price</label>
        <div class="input-group">
          <span class="input-group-text">₹</span>
          <input type="number" step="0.01" class="form-control" id="variation_market_price"
            name="variation_market_price" placeholder="Enter Market Price" value="<%= product_info[0].variation_market_price %>" required>
        </div>
      </div>

      <!-- Variation Price -->
      <div class="col-md-6">
        <label for="variation_price" class="form-label">Selling Price</label>
        <div class="input-group">
          <span class="input-group-text">₹</span>
          <input type="number" step="0.01" class="form-control" id="variation_price" name="variation_price"
            placeholder="Enter Selling Price" value="<%= product_info[0].variation_price %>" required>
        </div>
      </div>

      <!-- Available Stock -->
      <div class="col-md-6">
        <label for="available_stock" class="form-label">Available Stock</label>
        <input type="number" min="0" class="form-control" id="available_stock" name="available_stock"
          placeholder="Enter Available Stock" value="<%= product_info[0].available_stock %>" required>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="col-md-12 mt-4 d-flex justify-content-center gap-3">
      <button type="submit" class="btn btn-primary">
        <i class="bi bi-save me-1"></i> Save
      </button>
    </div>
  </div>
</form>

  <%- include("footer.ejs") %>