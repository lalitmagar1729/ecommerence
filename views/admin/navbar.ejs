  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <!-- chart.js -->
   <script src="https://cdn.jsdelivr.net/npm/chart.js@4.5.0"></script>
  <style>
    body {
      display: flex;
      flex-direction: row;
      min-height: 100vh;
      /* Full height of viewport */
      margin: 0;
      background: linear-gradient(120deg, #f8fafc 0%, #e0e7ef 100%);
    }

    .sidebar {
      background: linear-gradient(135deg, #343a40 80%, #495057 100%);
      color: white;
      min-height: 100vh;
      /* Full height of viewport */
      width: 260px;
      box-shadow: 2px 0 10px rgba(0, 0, 0, 0.08);
      padding: 20px;
    }


    .sidebar h2 {
      font-size: 1.5rem;
      font-weight: 700;
      letter-spacing: 1px;
      margin-bottom: 1rem;
    }

    .nav-link {
      color: white;
      font-size: 1.05rem;
      border-radius: 6px;
      padding: 8px 12px;
      margin-bottom: 6px;
      transition: background 0.2s;
    }

    .nav-link.active,
    .nav-link:hover {
      background: #495057;
      color: #ffc107;
    }

    .content {
      flex-grow: 1;
      padding: 40px;
    }

    /* Base Style */
    .btn-save {
      font-weight: 600;
      border-radius: 8px;
      padding: 6px 14px;
      letter-spacing: 0.4px;
      transition: all 0.3s ease-in-out;
      box-shadow: 0 3px 8px rgba(13, 110, 253, 0.25);
      position: relative;
      overflow: hidden;
    }

    /* Hover Glow */
    .btn-save:hover {
      transform: translateY(-2px) scale(1.05);
      box-shadow: 0 6px 16px rgba(13, 110, 253, 0.45);
      background: linear-gradient(135deg, #0d6efd, #0a58ca);
    }

    /* Ripple Animation */
    .btn-save::after {
      content: "";
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      background: rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      transform: translate(-50%, -50%);
      transition: width 0.4s ease, height 0.4s ease;
    }

    .btn-save:active::after {
      width: 200%;
      height: 200%;
      transition: 0s;
    }

    /* Icon Animation */
    .btn-save i {
      transition: transform 0.3s ease;
    }

    .btn-save:hover i {
      transform: rotate(-20deg) scale(1.2);
    }

    /* EDIT BUTTON  */
    /* Advanced Animated Edit Button */
    .btn-edit-animate {
      position: relative;
      overflow: hidden;
      font-weight: 600;
      border-radius: 10px;
      padding: 6px 14px;
      letter-spacing: 0.5px;
      transition: all 0.35s ease-in-out;
      background: linear-gradient(135deg, #0d6efd, #0a58ca);
      box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
    }

    /* Neon Glow Effect */
    .btn-edit-animate:hover {
      background: linear-gradient(135deg, #0a58ca, #0d6efd);
      color: #fff;
      box-shadow: 0 0 12px rgba(13, 110, 253, 0.8),
        0 0 25px rgba(13, 110, 253, 0.6),
        0 0 45px rgba(13, 110, 253, 0.4);
      transform: translateY(-3px) scale(1.08);
    }

    /* Ripple Animation */
    .btn-edit-animate::after {
      content: "";
      position: absolute;
      width: 10px;
      height: 10px;
      background: rgba(255, 255, 255, 0.4);
      display: block;
      border-radius: 50%;
      opacity: 0;
      pointer-events: none;
      transform: scale(1, 1);
      animation: none;
    }

    .btn-edit-animate:active::after {
      left: var(--x);
      top: var(--y);
      opacity: 1;
      transform: scale(0, 0);
      animation: ripple 0.6s linear;
    }

    @keyframes ripple {
      100% {
        opacity: 0;
        transform: scale(15, 15);
      }
    }

    /* Icon Animation */
    .btn-edit-animate i {
      transition: transform 0.4s ease, color 0.4s ease;
    }

    .btn-edit-animate:hover i {
      transform: rotate(25deg) scale(1.3);
      color: #ffe066;
    }
  </style>
</head>

